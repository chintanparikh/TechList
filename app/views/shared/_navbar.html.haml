.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "TechList", root_path, class: 'brand'
      .btn-group.pull-right
        - unless current_user.nil?
          %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %i.icon-user
            = current_user.email
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "#"} My Listings
            %li
              %a{:href => "#"} Manage my Account
            %li.divider
            %li
              = link_to "Sign out", destroy_user_session_path, method: :delete
        - else
          %a.btn{href: new_user_session_path} Sign In
      .nav-collapse
        %ul.nav
          %li.active
            %a{:href => "#"} Home
          %li
            %a{:href => "#about"} About
          %li
            %a{:href => "#contact"} Contact
      / /.nav-collapse
